pipeline{
agent any
stages{
stage('choice 1'){
	when{
	expression { choice == '1' }
	}
	steps{
	echo 'This is choice 1'
	}
}

stage('choice 1'){
	when{
	expression { choice == '1' }
	}
	steps{
	echo 'This is choice 1'
	}
}

stage('choice 2'){
	when{
	expression { choice == '2' }
	}
	steps{
	echo 'This is choice 2'
	}
}

stage('choice 3'){
	when{
	expression { choice == '3' }
	}
	steps{
	echo 'This is choice 3'
	}
}

}
}
